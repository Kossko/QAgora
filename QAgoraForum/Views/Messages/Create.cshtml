@model QAgoraForum.Models.Message

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
<div class="panel panel-primary">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Message</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.SendDate, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.HiddenFor(model => model.SendDate, new { htmlAttributes = new { @class = "form-control" } })
                    <p class="form-control-static"> @Model.SendDate</p>
                    @Html.ValidationMessageFor(model => model.SendDate, "", new { @class = "text-danger" })
                </div>
                @Html.LabelFor(model => model.From, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.HiddenFor(model => model.From, new { htmlAttributes = new { @class = "form-control" } })
                    <p class="form-control-static"> @User.Identity.Name</p>
                    @Html.ValidationMessageFor(model => model.From, "", new { @class = "text-danger" })
                </div>
                @Html.LabelFor(model => model.Reciver, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.HiddenFor(model => model.Reciver.Id, new { htmlAttributes = new { @class = "form-control" } })
                    <p class="form-control-static"> @Model.Reciver.UserName</p>
                    @Html.ValidationMessageFor(model => model.From, "", new { @class = "text-danger" })
                </div>
                @Html.LabelFor(model => model.content, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.content, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.content, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>

            </div>
        </div>
    }
</div>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
